<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @network.name %>
</p>

<p>
  <b>Description:</b>
  <%= @network.description %>
</p>

<p>
  <b>Url web:</b>
  <%= @network.url_web %>
</p>

<p>
  <b>Shows on this network:</b>
  <% unless @network.shows.count == 0 %>
    <ul>
      <% @network.shows.each do |show| %>
      <li><%= show.name %></li>
      <% end %>
    </ul>
  <% else %>
    <em>none</em>
  <% end %>
<p>

<%= link_to 'Edit', edit_network_path(@network) %> |
